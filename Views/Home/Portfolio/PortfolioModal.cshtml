@model Portfolio.Models.PortfolioModalModel

<div class="portfolio-modal modal fade" id="@Model.Id" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-content">
        <div class="close-modal" data-dismiss="modal">
            <div class="lr">
                <div class="rl">
                </div>
            </div>
        </div>
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="modal-body">
                        <h2>@Model.Title</h2>
                        <div id="@Model.GalleryId" class="carousel slide" data-ride="carousel">
                            <ol class="carousel-indicators">
                                <li data-target="@string.Concat("#", Model.GalleryId)" data-slide-to="0" class="active"></li>
                                @for (var i = 1; i < Model.ImagePathList.Count; i++)
                                {
                                    <li data-target="@string.Concat("#", Model.GalleryId)" data-slide-to="@i"></li>
                                }
                            </ol>
                            <div class="carousel-inner" role="listbox">
                                <div class="item active">
                                    <img src="@Model.ImagePathList[0]" />
                                </div>
                                @for (var i = 1; i < Model.ImagePathList.Count; i++)
                                {
                                    <div class="item">
                                        <img src="@Model.ImagePathList[i]" />
                                    </div>
                                }
                            </div>
                            <a class="left carousel-control" href="@string.Concat("#", Model.GalleryId)" role="button" data-slide="prev">
                                <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
                                <span class="sr-only">Previous</span>
                            </a>
                            <a class="right carousel-control" href="@string.Concat("#", Model.GalleryId)" role="button" data-slide="next">
                                <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
                                <span class="sr-only">Next</span>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>